<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar"> <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimaryDark</item>
        <item name="toolbarStyle">@style/Widget.AppCompat.Toolbar</item>
        <item name="buttonStyle">@style/Widget.AppCompat.Button</item>
        <item name="toolbarNavigationButtonStyle">
            @style/Widget.AppCompat.Toolbar.Button.Navigation
        </item>
    </style>

<!--    <style name="AuthUI" parent="FirebaseUI"> &lt;!&ndash; Required for sign-in flow styling &ndash;&gt;-->
